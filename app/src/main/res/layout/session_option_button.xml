<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/session_option_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/Black"
        android:background="@drawable/drawable_main_button_shape" />

    <ImageButton
        android:id="@+id/edit_session_button"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@id/delete_session_button"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:contentDescription="Edit session"
        android:src="@drawable/edit_pencil" />

    <ImageButton
        android:id="@+id/delete_session_button"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:contentDescription="Delete session"
        android:src="@drawable/delete_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>