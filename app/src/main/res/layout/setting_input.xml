<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/blank_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blank_space"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/Black"
        android:background="@drawable/drawable_main_button_shape">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            android:paddingVertical="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/save_streaming_option_button"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blank_space"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:contentDescription="Save option"
        android:src="@drawable/checkmark_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>